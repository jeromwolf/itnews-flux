# Tech News Digest - Docker Environment Variables
# Copy this to .env and fill in your values

# ============================================================================
# OpenAI API
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Tech News Digest
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# Web Server
# ============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=8000

# ============================================================================
# Redis (Cache)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# YouTube API
# ============================================================================
YOUTUBE_CLIENT_SECRETS_FILE=/app/config/client_secrets.json
YOUTUBE_TOKEN_FILE=/app/config/youtube_token.pickle

# ============================================================================
# News Crawler
# ============================================================================
CRAWLER_USER_AGENT=Mozilla/5.0 (Tech News Digest Bot)
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3

# ============================================================================
# Video Settings
# ============================================================================
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30
VIDEO_CODEC=libx264

# ============================================================================
# Paths
# ============================================================================
OUTPUT_DIR=/app/output
LOGS_DIR=/app/logs
CONFIG_DIR=/app/config
