# Tech News Digest - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenAI API
# ============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_organization_id_here  # Optional

# OpenAI Model Settings
OPENAI_GPT_MODEL=gpt-4o
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy  # alloy, echo, fable, onyx, nova, shimmer

# ============================================================================
# YouTube API
# ============================================================================
YOUTUBE_API_KEY=AIza_your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=UC_your_channel_id_here

# YouTube Upload Settings
YOUTUBE_CATEGORY_ID=28  # Science & Technology
YOUTUBE_PRIVACY_STATUS=public  # public, private, unlisted
YOUTUBE_UPLOAD_TIME=07:00  # Upload time (KST)

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/technews
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here  # Optional
REDIS_MAX_CONNECTIONS=10

# ============================================================================
# AWS (Optional)
# ============================================================================
AWS_ACCESS_KEY_ID=AKIA_your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=tech-news-digest
AWS_S3_VIDEO_PREFIX=videos/
AWS_S3_THUMBNAIL_PREFIX=thumbnails/

# ============================================================================
# Application Settings
# ============================================================================
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_PORT=8000

# ============================================================================
# News Crawler Settings
# ============================================================================
CRAWLER_USER_AGENT=TechNewsDigest/1.0 (+https://technewsdigest.com)
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_RETRY_DELAY=5

# News Sources (comma-separated)
NEWS_SOURCES_IT=techcrunch,theverge,arstechnica,wired,mittr
NEWS_SOURCES_BUSINESS=reuters,bloomberg

# ============================================================================
# Video Generation Settings
# ============================================================================
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30
VIDEO_DURATION=300  # 5 minutes
VIDEO_BITRATE=5000k

# Image Generation
IMAGE_WIDTH=1792
IMAGE_HEIGHT=1024
IMAGE_QUALITY=hd  # standard, hd

# TTS Settings
TTS_SPEED=1.0
TTS_FORMAT=mp3

# ============================================================================
# Scheduler Settings
# ============================================================================
SCHEDULER_ENABLED=true
SCHEDULER_RUN_TIME=06:00  # Daily run time (KST)
SCHEDULER_TIMEZONE=Asia/Seoul

# ============================================================================
# Monitoring & Alerts
# ============================================================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#tech-news-alerts

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@example.com

# Sentry (Optional)
SENTRY_DSN=https://your_sentry_dsn_here

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_AUTO_UPLOAD=true
FEATURE_GENERATE_SUBTITLES=false
FEATURE_MULTILINGUAL=false
FEATURE_ANALYTICS=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_OPENAI_RPM=60  # Requests per minute
RATE_LIMIT_OPENAI_RPD=1000  # Requests per day
RATE_LIMIT_CRAWLER_RPS=5  # Requests per second

# ============================================================================
# Cache Settings
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL_NEWS=3600  # 1 hour
CACHE_TTL_IMAGE=86400  # 24 hours
CACHE_TTL_TTS=86400  # 24 hours

# ============================================================================
# Development Settings
# ============================================================================
DEV_SKIP_UPLOAD=false
DEV_SKIP_CRAWLING=false
DEV_USE_MOCK_DATA=false
DEV_SAVE_INTERMEDIATE=true

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # 1 hour

# API Keys Encryption
ENCRYPTION_KEY=your-encryption-key-here

# ============================================================================
# Logging
# ============================================================================
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json  # json, text

# ============================================================================
# Performance
# ============================================================================
WORKER_PROCESSES=4
WORKER_TIMEOUT=300  # 5 minutes
MAX_CONCURRENT_REQUESTS=10

# ============================================================================
# Content Settings
# ============================================================================
# News Selection
NEWS_COUNT_TOTAL=5
NEWS_COUNT_IT=4  # 3-4 IT news
NEWS_COUNT_BUSINESS=1  # 1-2 Business news

# Category Weights
WEIGHT_AI_ML=1.5
WEIGHT_SOFTWARE_CLOUD=1.3
WEIGHT_STARTUP_FUNDING=1.2
WEIGHT_SECURITY=1.2
WEIGHT_BUSINESS=1.0

# ============================================================================
# Testing
# ============================================================================
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/technews_test
TEST_OPENAI_API_KEY=sk-test-key
TEST_SKIP_INTEGRATION=false
